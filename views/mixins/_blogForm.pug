mixin blogForm(blog = {})
    form(action=`/add/${blog._id || ''}` method="POST" enctype='multipart/form-data' class= 'card')
        label(for="title") Title
        input(type="text" name='title' required)
        //- image upload
        label(for="photo") Photo
        input(type="file" name='photo' id='photo' accept='image/git, image/png, image/jpg, image/jpeg')
        label(for="text") Text
        textarea(name="text", cols="30", rows="10" required)
        input(type="submit" value='SAVE' class='button')
